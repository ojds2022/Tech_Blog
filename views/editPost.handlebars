<div class="mainHeaderContainer">
    <div class="mainHeaderLining" id="dashboardHeader">
        <h1 class="mainHeader">Your Dashboard</h1>
    </div>
</div>
<div id="editPostContainer">
    <form id="editPostForm" data-id="{{chosenPost.id}}">
        <h3>Edit Post</h3>
        <label for="editPostTitle">Title:</label>
        <input id="editPostTitle" type="text" value="{{{chosenPost.blog_header}}}" />
        <label for="editPostContent">Content:</label>
        <textarea id="editPostContent">{{chosenPost.blog_content}}</textarea>
        <button id="updatePostBtn" type="submit">Update Post</button>
        <button id="deletePostBtn">Delete</button>
    </form>
    <a href="/dashboard">
        <button id="cancelBtn">Cancel</button>
    </a>
</div>
<script src="/js/dashboard.js"></script>